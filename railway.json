{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && cd frontend && npm ci && npm run build && cd ../backend && npm ci && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "NODE_ENV=production node backend/dist/server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
